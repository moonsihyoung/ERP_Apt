                                    <td style="text-align: center; vertical-align:middle">
                                        @if (st.Division == "A")
                                        {
                                            <span>근무중</span>
                                        }
                                        else
                                        {
                                            @st.Career_End_Date.ToShortDateString()
                                        }
                                    </td>
                                    <td style="text-align: center; vertical-align:middle">
                                        @company_Lib.Company_Name_Code_A(st.Cor_Code)
