@page "/Admin/Labor_contract/Wge"
<div class="card">
    <div class="card-header">
        <table style="width: 100%">
            <tr>
                <td style="font-size: 1.1em">
                    <span class="bi-alarm-fill"> </span>&nbsp; <span style="font-weight:bold"> 연도별 최저임금 정보 목록</span>
                </td>
                <td>
                </td>
                <td style="text-align:right">
                    <button id="Open" class="btn btn-link" @onclick="btnOpen"><span class="bi-check-square"></span>&nbsp; 새로 등록</button>
                </td>
            </tr>
        </table>
    </div>
    <div class="card-body">
        <table class="table table-sm" style="font-size: 0.9em">
            <thead>
                <tr style="background-color:whitesmoke;">
                    <th style="text-align: center">
                        번호
                    </th>
                    <th style="text-align: center">
                        년도
                    </th>
                    <th style="text-align: center">
                        최저임금액
                    </th>
                    <th style="text-align: center">
                        설명
                    </th>
                    
                    <th style="text-align: center">
                        입력일
                    </th>
                    <th style="text-align: center">
                        입력자 아이디
                    </th>

                </tr>
            </thead>
            <tbody>
                @if (ann == null)
                {
                    <tr>
                        <td style="text-align:center" colspan="5">
                            <img src="/images/loader.gif" />
                        </td>
                    </tr>
                }
                else if (ann.Count == 0)
                {
                    <tr>
                        <td style="text-align:center" colspan="5">
                            입력된 정보가 없습니다. ............
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var st in ann)
                    {
                        <tr>
                            <td style="text-align: center; vertical-align: middle">
                                @st.Aid
                            </td>
                            <td style="text-align: center; vertical-align: middle">
                                @st.Year
                            </td>
                            <td style="text-align: center; vertical-align: middle">
                                @st.wage
                            </td>
                            <td style="text-align: center; vertical-align: middle">
                                @st.Details
                            </td>
                            
                            <td style="text-align: center; vertical-align: middle">
                                @st.PostDate.ToShortDateString()
                            </td>
                            <td style="text-align: center; vertical-align: middle">
                                @st.User_Code
                            </td>
                        </tr>
                    }
                }
                <tr>
                    <td colspan="5">
                        <div class="col-md-12">
                            <DulPager.DulPagerComponent Model="pager" PageIndexChanged="PageIndexChanged"></DulPager.DulPagerComponent>
                        </div>
                    </td>
                </tr>
            </tbody>

        </table>
    </div>
    <div class="card-footer" style="text-align: right">
        <span class="text-primary" style="font-size: 1em">(주)신원티엠씨</span>
    </div>
</div>