@page "/Staff/Join_Staff"

@if (InsertFiles == "A")
{
    <div class="card">
    <div class="card-header">
        <table width="100%">
            <tr>
                <td>
                    <h6><span class="bi-journal-text"> </span>&nbsp;회원 가입 정보</h6>
                </td>
