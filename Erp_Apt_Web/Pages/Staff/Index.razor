@page "/Staff"

<div class="card">
    <div class="card-header">
        <table width="100%">
            <tr>
                <td>
                    <h6><span class="bi-person"></span> 직원정보 관리 </h6>
                </td>
                <td>
                    @*<h6>현 직원 수 : @intNum<span>명</span> </h6>*@
                </td>

                <td class="text-right">
                    <button id="Career_People" name="Career_People" class="btn btn-secondary btn-sm" @onclick="OnInsertCareerViews"><span class="bi-box-arrow-in-right">&nbsp;</span> 배치 정보 등록</button>&nbsp; &nbsp;
