                        </select>
                    </div>
                </td>
            </tr>
        </table>

        <table class="table table-sm table-hover" width="100%" style="font-size: 0.9em">
            <thead>
                <tr style="background-color: ghostwhite">
                    <th class="text-center">
                        일련번호
                    </th>
                    <th class="text-center">
                        식별코드
                    </th>
                    <th class="text-center">
                        부서
                    </th>
                    <th class="text-center">
                        직책
                    </th>
                    <th class="text-center">
                        이름
                    </th>
                    <th class="text-center">
                        출생일
                    </th>
                    <th class="text-center">
                        입사일
                    </th>
                    <th class="text-center">
                        퇴사일
                    </th>
                    <th class="text-center">
                        근무여부
                    </th>
                    <th class="text-center">
                        소속
                    </th>
                    <th class="text-center">
                        입력일
                    </th>
                    <th class="text-center">
                        선택
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ann)
                {
                    <tr>
                        <td class="text-center" style="vertical-align: middle" @onclick="() => ByDetails(item)">
                            @item.Aid
                            @*@string.Format("{0: ###,###.##}", (intNum--))*@
                        </td>
                        <td class="text-center" style="vertical-align: middle" @onclick="() => ByDetails(item)">
                            @item.User_ID
                        </td>
                        <td class="text-center" style="vertical-align: middle" @onclick="() => ByDetails(item)">
                            @item.Post
                        </td>
                        <td class="text-center" style="vertical-align: middle" @onclick="() => ByDetails(item)">
                            @item.Duty
                        </td>
                        <td class="text-center" style="vertical-align: middle" @onclick="() => ByDetails(item)">
                            @item.User_Name
                        </td>
                        <td class="text-center" style="vertical-align: middle" @onclick="() => ByDetails(item)">
                            @item.Scn
                        </td>
                        <td class="text-center" style="vertical-align: middle" @onclick="() => ByDetails(item)">
                            @item.Career_Start_Date.ToShortDateString()
                        </td>
                        <td class="text-center" style="vertical-align: middle" @onclick="() => ByDetails(item)">
                            @if (item.Division == "A")
                            {
                                <span style="color: blue">없음</span>
                            }
                            else
                            {
                                <span style="color: red">@item.Career_End_Date.ToShortDateString()</span>
                            }

                        </td>
                        <td class="text-center" style="vertical-align: middle" @onclick="() => ByDetails(item)">
                            @if (item.Division == "A")
                            {
                                <span style="color: blue">근무중</span>
                            }
                            else
                            {
                                <span style="color: red">퇴사</span>
                            }
                        </td>
                        <td class="text-center" style="vertical-align: middle" @onclick="() => ByDetails(item)">
                            @if (item.Post_Code == "A")
                            {
                                <span>관리직원</span>
                            }
                            else if (item.Post_Code == "F")
                            {
                                <span>경비직원</span>
                            }
                            else if (item.Post_Code == "G")
                            {
                                <span>미화직원</span>
                            }
                            else if (item.Post_Code == "C")
                            {
                                <span>입대의</span>
                            }
                            else if (item.Post_Code == "D")
                            {
                                <span>선관위</span>
                            }
                            else if (item.Post_Code == "E")
                            {
                                <span>자생단체</span>
                            }
                            else if (item.Post_Code == "H")
                            {
                                <span>기타</span>
                            }
                        </td>
                        <td class="text-center" style="vertical-align: middle" @onclick="() => ByDetails(item)">
                            @item.PostDatge.ToShortDateString()
                        </td>
                        <td class="text-center" style="vertical-align: middle">
                            @*<input id="Button11" class="btn btn-link btn-sm" style="font-size: 0.9em" type="button" @onclick="() => ByDetails(item)" value="상세" />*@
                            <input id="Button12" class="btn btn-link btn-sm" style="font-size: 0.9em" type="button" @onclick="() => CareerByEdit(item)" value="수정" />
                            <input id="Button13" class="btn btn-link btn-sm" style="font-size: 0.9em" type="button" @onclick="() => ByRemove(item)" value="퇴사" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-md-12">
            <DulPager.DulPagerComponent Model="pager" PageIndexChanged="PageIndexChanged"></DulPager.DulPagerComponent>
        </div>
    </div>
</div>


